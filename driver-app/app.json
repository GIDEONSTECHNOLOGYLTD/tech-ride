{
  "expo": {
    "name": "TechRide Driver",
    "slug": "techride-driver",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#00C851"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.gideonstech.techridedriver",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "TechRide Driver needs your location to show nearby ride requests",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "TechRide Driver needs your location to navigate to pickup and dropoff points",
        "NSCameraUsageDescription": "Upload driver documents and profile photo",
        "NSPhotoLibraryUsageDescription": "Upload driver documents and profile photo"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#00C851"
      },
      "package": "com.gideonstech.techridedriver",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "apiUrl": "https://tech-ride.onrender.com/api",
      "socketUrl": "https://tech-ride.onrender.com",
      "eas": {
        "projectId": "e5972c7b-6172-439a-a512-42444c95f1ec"
      }
    }
  }
}
