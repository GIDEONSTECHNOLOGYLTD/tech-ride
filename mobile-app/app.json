{
  "expo": {
    "name": "TechRide",
    "slug": "techride-rider",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#3B82F6"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.gideonstech.techride",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "TechRide needs your location to show nearby drivers and provide accurate pickup.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "TechRide needs your location to track your ride and provide real-time updates.",
        "NSLocationAlwaysUsageDescription": "TechRide needs background location access to track your ride.",
        "UIBackgroundModes": [
          "location"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#3B82F6"
      },
      "package": "com.gideonstech.techride",
      "versionCode": 1,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow RideShare to use your location for accurate pickups and tracking."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "0cc47470-15b2-4d5d-8d12-e74b76a4d958"
      }
    }
  }
}
